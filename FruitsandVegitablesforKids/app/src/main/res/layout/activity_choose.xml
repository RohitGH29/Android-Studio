<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    tools:context=".ChooseActivity">

    <!-- <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/celebration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="false"
        app:lottie_fileName="celebration.json"
        app:lottie_speed="1" />  -->


    <ImageView
        android:id="@+id/fr"
        android:layout_width="191dp"
        android:layout_height="121dp"
        android:src="@drawable/apple"
        app:layout_constraintBottom_toTopOf="@+id/ve"
        app:layout_constraintEnd_toStartOf="@+id/an"
        app:layout_constraintStart_toStartOf="@id/guideline_start_end"
        app:layout_constraintTop_toTopOf="@id/guideline_top1" />

    <ImageView
        android:id="@+id/an"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:src="@drawable/lion"
        app:layout_constraintBottom_toTopOf="@+id/nu"
        app:layout_constraintEnd_toStartOf="@+id/al"
        app:layout_constraintStart_toEndOf="@+id/fr"
        app:layout_constraintTop_toTopOf="@id/guideline_top1" />

    <ImageView
        android:id="@+id/nu"
        android:layout_width="195dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/tr"
        app:layout_constraintStart_toEndOf="@+id/ve"
        app:layout_constraintTop_toBottomOf="@+id/an"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/ve"
        android:layout_width="189dp"
        android:layout_height="128dp"
        android:src="@drawable/cabbage"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/nu"
        app:layout_constraintStart_toStartOf="@id/guideline_start_end"
        app:layout_constraintTop_toBottomOf="@+id/fr" />

    <ImageView
        android:id="@+id/al"
        android:layout_width="189dp"
        android:layout_height="128dp"
        android:src="@drawable/a"
        app:layout_constraintBottom_toTopOf="@+id/tr"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/an"
        app:layout_constraintTop_toTopOf="@id/guideline_top1" />

    <ImageView
        android:id="@+id/tr"
        android:layout_width="189dp"
        android:layout_height="128dp"
        android:src="@drawable/train"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nu"
        app:layout_constraintTop_toBottomOf="@+id/al" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toEndOf="@id/guideline_start_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top1"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0627" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.935" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.135" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />

</androidx.constraintlayout.widget.ConstraintLayout>
